<?xml version="1.0" encoding="UTF-8"?>  

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#F0E0D6"
    android:orientation="horizontal"
    >  

	<LinearLayout
		android:id="@+id/ll_main"
    	android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:padding="6dip"
    	android:background="#F0E0D6"
    	android:orientation="vertical"
    	>  
 	  	<LinearLayout
    	    android:orientation="vertical"
       	 android:layout_width="wrap_content"
	        android:layout_height="wrap_content">  
    	    <TextView android:id="@+id/name" android:layout_width="fill_parent"  
	            android:layout_height="wrap_content" android:layout_weight="1"  
    	        android:textSize="16sp"
       	     android:textColor="#800000"
           	 android:gravity="center_vertical" />  
	    </LinearLayout>  
 	    <LinearLayout  
    	    android:orientation="vertical"
       	 android:layout_width="wrap_content"
       	 android:layout_height="wrap_content">  
     	  <TextView android:layout_width="fill_parent"  
            	android:layout_height="fill_parent" android:layout_weight="1" android:id="@+id/url"  
           	 android:textSize="16sp"
       	     android:textColor="#117743"
    	        android:ellipsize="marquee" />  
   	 </LinearLayout>  
	</LinearLayout>  
	<LinearLayout
    	android:layout_width="wrap_content"
	    android:layout_height="fill_parent"
    	android:background="#F0E0D6"
    	android:orientation="horizontal"
    	>  
	        <TextView android:layout_width="50px"  
	            android:layout_height="wrap_content"
	            android:id="@+id/nonclickableblank"  
	            android:textSize="14sp"
				android:textColor="#117743"
	            android:text=""
	            />  
		<Button
			android:background="@drawable/star_big_off"
    	    android:id="@+id/favorite_btn"
       	 android:layout_width="57px"
       	 android:layout_height="57px"
       	 android:layout_gravity="center_vertical"
       	 android:gravity="center_vertical"
    	    android:onClick="onClickFavoriteBtn"
    	    />
	        <TextView android:layout_width="20px"  
	            android:layout_height="wrap_content"
	            android:id="@+id/nonclickableblank"  
	            android:textSize="14sp"
				android:textColor="#117743"
	            android:text=""
	            />  
	</LinearLayout>  
</LinearLayout>  

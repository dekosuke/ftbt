<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    > 
<RelativeLayout android:layout_width="fill_parent"
android:layout_height="wrap_content" android:id="@+id/top_control_bar">
</RelativeLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:id="@+id/bottom_control_bar" android:orientation="horizontal">
    <Button android:text="リロード"
        android:id="@+id/reload_btn"
        android:layout_height="wrap_content"
        android:onClick="onClickReloadBtn" android:layout_width="fill_parent" android:layout_weight="1">
    </Button>
    <Button android:text="投稿する"
        android:id="@+id/post_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickPostBtn" android:layout_weight="2">
    </Button>
</LinearLayout>

<ListView android:id="@+id/threadlistview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@id/top_control_bar" 
    android:layout_above="@id/bottom_control_bar"
     />
</RelativeLayout>


